<%= form_tag(dashboard_index_path, method: 'get') do %>
  <div class="card mb-lg advanced-search-form bg-dark text-light" id="filters">
    <div class="card-header text-info d-flex justify-content-center">
      Pesquisa avançada
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-1">
          <div class="btn-group" style="margin-top:23px;" role="group">
            <%= link_to dashboard_index_path(status: 'positive'), class: 'btn btn-success text-light' do %> <i class="fas fa-check"></i><% end %>
            <%= link_to dashboard_index_path(status: 'negative'), class: 'btn btn-danger text-light' do %> <i class="fas fa-times"></i><% end %>
          </div>
        </div>
        <div class="col-2">
          <%= label_tag :fulfillment_channel, 'Armazém' %>
          <%= select_tag :fulfillment_channel, options_for_select(['FBA','FBM'].map{|v| [v]}, params[:fulfillment_channel]), include_blank: true, class: 'form-control chosen-select' %>
        </div>
        <div class="col-7">
          <%= label_tag :search, 'Procurar' %>
          <%= text_field_tag :search, params[:search], class: 'form-control', placeholder: 'Pesquisar' %>
        </div>
        <div class="col-2" style="margin-top:27px;">
          <span class="badge bg-secondary w-100">
            <%= label_tag :all, 'Incluir inativos' %>
            <%= check_box_tag :all, 'todos', params[:all] == 'todos', class: 'form-check-input' %>
          </span>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <%= button_tag class: 'btn btn-secondary text-info w-100', name: '' do %><i class="fa fa-search text-info"></i> Pesquisar<% end %>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-12">
    <table class="table table-dark table-hover table-responsive table-striped" style="overflow-x: scroll;" id="products-table">
      <thead>
        <tr>
          <th class="text-center"><i class="fa fa-ellipsis-v"></i></th>
          <th class="text-center"><%= 'ID do Produto' %></th>
          <th class="text-center"><%= 'Armazém' %></th>
          <th class="text-center"><%= 'Estoque' %></th>
          <th class="text-center"><%= 'Últimos 30 dias Vendas' %></th>
          <th class="text-center"><%= 'Nome do Item' %></th>
          <th class="text-center"><%= 'SKU' %></th>
          <th class="text-center"><%= 'Preço Unitário' %></th>
          <th class="text-center"><%= 'Status' %></th>
          <th class="text-center"><%= 'Última atualização' %></th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td class="text-center">
              <div class="btn-group" role="group" aria-label="Basic example">
                <%= link_to edit_product_path(id: product.id), class: 'btn btn-light btn-sm text-dark' do %> <i class="fas fa-edit"></i><% end %>
                <% if product.supplier_url.present? %>
                  <%= link_to product.supplier_url, class: 'btn btn-light btn-sm text-dark', target:'_blank' do %> <i class="fa-brands fa-internet-explorer"></i><% end %>
                <% end %>
              </div>
            </td>
            <td class="text-center"><%= product.id_product %></td>
            <td class="text-center"><%= product.fulfillment_channel == 'FBA' ? %(<span class="badge bg-primary"><i class="fa-brands fa-amazon"></i> FBA</span>).html_safe : %(<span class="badge bg-secondary"><i class="fas fa-globe-americas"></i> FBM</span>).html_safe %></td>
            <td class="text-center table-<%= product.resolver_stock.to_i < 0 ? 'success' : 'danger' %>"><h5><%= product.resolver_stock %></h5></td>
            <td class="text-center"><%= product.total_unit_count %></td>
            <td class="text-center"><%= ActionController::Base.helpers.truncate(product.item_name, length: 60, omission: '...') %></td>
            <td class="text-center"><%= product.seller_sku %></td>
            <td class="text-center">$ <%= product.price %></td>
            <td class="text-center"><%= product.status == 'Active' ? %(<span class="badge bg-success">Ativo</span>).html_safe : %(<span class="badge bg-danger">Inativo</span>).html_safe %></td>
            <td class="text-center"><%= product.updated_at.strftime('%d/%m/%Y %H:%M') %></td>
          </tr>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="12">
            <%= page_entries_info @products %>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>
</div>
<script>
  $(document).ready(function() {
      $('.table').DataTable();
  });
</script>
<%= will_paginate @products, list_classes: %w[pagination justify-content-center mt-lg], inner_window: 1 %>
